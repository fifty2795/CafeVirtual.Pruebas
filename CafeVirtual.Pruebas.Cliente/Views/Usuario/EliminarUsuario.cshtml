@using CafeVirtual.Pruebas.Data.Models;
@using CafeVirtual.Pruebas.Utilidades.Model;
@model ResponseViewModel<TblUsuario>

<script src="~/js/Usuario.js"></script>

<div class="section-header">
    <h1><span><i class="fas fa-user me-2"></i></span>Usuarios</h1>
</div>

<div class="my-form-container">
    <form id="formUsario" class="form-container">        

        @* Id *@

        <input type="hidden" id="IdUsuario" name="IdUsuario" value="@ViewBag.IdUsuario" />

        @* Nombre *@

        <div class="form-row d-flex justify-content-center align-items-center">
            <div class="form-group col-md-3">
                <label for="lblNombre" class="label-concepto">Nombre</label>
                <input type="text" class="form-control" id="txtNombre" name="Nombre" value="@Model.Data.Nombre @Model.Data.ApellidoPaterno @Model.Data.ApellidoMaterno" readonly />
            </div>
        </div>

        @* Rol *@

        <div class="form-row d-flex justify-content-center align-items-center">
            <div class="form-group col-md-3">
                <label for="lblRol" class="label-concepto">Rol</label>
                <input class="form-control" id="txtRol" name="Rol" value="@Model.Data.IdRolNavigation.Nombre" readonly />
            </div>
        </div>

        @* Email *@

        <div class="form-row d-flex justify-content-center align-items-center">
            <div class="form-group col-md-3">
                <label for="lblEmail" class="label-concepto">Email</label>
                <input type="text" class="form-control" id="txtEmail" name="Email" value="@Model.Data.Email" readonly />
            </div>
        </div>

        @* Fecha Creacion *@

        <div class="form-row d-flex justify-content-center align-items-center">
            <div class="form-group col-md-3">
                <label for="lblFechaCreacion" class="label-concepto">Fecha Creacion</label>
                <input type="text" class="form-control" id="txtFechaCreacion" name="FechaCreacion" value="@Model.Data.FechaCreacion.ToShortDateString()" readonly />
            </div>
        </div>

        @* btn Eliminar *@

        <div class="form-row">

            <div class="col-md-9">
            </div>

            <div class="col-md-3">
                <button id="btnEliminar" type="button" class="remove-btn" onclick="mostrarModalConfirmacionUsuario()">
                    <span><i class="fas fa-trash-alt"></i></span>
                    Eliminar Usuario
                </button>
            </div>

        </div>        
    </form>
</div>

<!-- Modal Confirmación Eliminación de Usuario -->
<div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="modalEliminarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarUsuarioLabel">
                    <i class="fa fa-user-times me-2"></i>Eliminar Usuario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">

                <p style="font-size: 0.875rem;">¿Estás seguro que deseas eliminar este usuario? Esta acción es permanente y no se puede deshacer.</p>

                <!-- Datos del Usuario -->
                <p style="font-size: 0.875rem;"><strong>Nombre:</strong> <span id="modalNombreUsuario" class="text-danger"></span></p>
                <p style="font-size: 0.875rem;"><strong>Rol:</strong> <span id="modalRolUsuario" class="text-primary"></span></p>
                <p style="font-size: 0.875rem;"><strong>Email:</strong> <span id="modalEmailUsuario" class="text-muted"></span></p>

            </div>
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="font-size: 0.875rem;" onclick="ocultarModalConfirmacion()">
                    <i class="fa fa-times me-1"></i> Cancelar
                </button>
                <button type="button" id="confirmBtn" class="btn btn-danger" style="font-size: 0.875rem;" onclick="eliminarUsuario()">
                    <i class="fas fa-trash-alt"></i> Eliminar Usuario
                </button>
            </div>
        </div>
    </div>
</div>

