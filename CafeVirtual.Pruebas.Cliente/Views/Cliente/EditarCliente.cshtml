@using CafeVirtual.Pruebas.Data.Models;
@using CafeVirtual.Pruebas.Utilidades.Model;
@model ResponseViewModel<TblCliente>;

<script src="~/js/cliente.js"></script>

<div class="section-header">
    <h1><span><i class="fas fa-users me-2"></i></span>Clientes</h1>
</div>

<div class="my-form-container">
    <form id="formCliente" class="form-container">

        @* Id *@
        <input type="hidden" id="IdCliente" name="IdCliente" value="@Model.Data.IdCliente" />

        <div class="form-row">

            @* Nombre *@
            <div class="col-md-3">
                <label for="txtNombre" class="label-concepto">Nombre</label>
                <input type="text" class="form-control" id="txtNombre" name="Nombre" value="@Model.Data.Nombre" required />
            </div>

            @* Descripción *@
            <div class="col-md-3">
                <label for="txtDescripcion" class="label-concepto">Descripción</label>
                <input type="text" class="form-control" id="txtDescripcion" name="Descripcion" value="@Model.Data.Descripcion" required />
            </div>

            @* RFC *@
            <div class="col-md-3">
                <label for="txtRFC" class="label-concepto">RFC</label>
                <input type="text" class="form-control" id="txtRFC" name="RFC" value="@Model.Data.Rfc" required />
            </div>

        </div>

        <div class="form-row mt-3">

            @* Email *@
            <div class="col-md-3">
                <label for="txtEmail" class="label-concepto">Email</label>
                <input type="email" class="form-control" id="txtEmail" name="Email" value="@Model.Data.Email" required />
            </div>

            @* Fecha de Creación *@
           @*  <div class="col-md-3">
                <label for="txtFechaCreacion" class="label-concepto">Fecha Creación</label>
                <input type="text" class="form-control" id="txtFechaCreacion" name="FechaCreacion" value="@Model.Data.FechaCreacionDateOnly.ToShortDateString()" placeholder="dd/mm/yyyy" data-validate="fecha" required />
            </div> *@

            <div class="col-md-1">
                @* Espacio vacío opcional *@
            </div>

            @* Activo *@
            <div class="col-md-2">
                <label for="chkBoxActivo" class="label-concepto">Activo</label>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="chkBoxActivo" name="Activo" @(Model.Data.Activo ? "checked" : "") />
                </div>
            </div>

        </div>

        @* btn Actualizar *@
        <div class="form-row mt-4">
            <div class="col-md-9">
            </div>
            <div class="col-md-3">
                <button id="btnActualizar" type="button" class="edit-btn">
                    <span><i class="fa fa-refresh"></i></span>
                    Actualizar Cliente
                </button>
            </div>
        </div>

    </form>
</div>

<br />

@section Scripts {

    <script>

        $(document).ready(function () {
            $('#txtFechaCreacion').datepicker({
                dateFormat: 'dd/mm/yy',
                autoclose: true
            });
        });

    </script>
}